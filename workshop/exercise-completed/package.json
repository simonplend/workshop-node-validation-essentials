{
  "name": "workshop-exercise-completed",
  "type": "module",
  "scripts": {
    "start": "nodemon --exec 'npm run schema-types:generate && node server.js'",
    "test": "tap",
    "schema-types:generate": "json2ts -i schemas/ -o types/schemas/",
    "schema-types:clean": "rm -r types/schemas/",
    "build:schema-types": "npm run schema-types:clean && npm run schema-types:generate",
    "check-types": "tsc",
    "build": "npm run build:schema-types && npm run check-types"
  },
  "dependencies": {
    "ajv": "^8.8.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.10",
    "json-schema-to-typescript": "^10.1.5",
    "typescript": "^4.5.2"
  }
}
