  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "simple-get": "^4.0.0",
    "tap": "^15.1.5",
    "tsm": "^2.2.1"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.23.0",
    "ajv": "^8.8.2",
    "fluent-json-schema": "^3.0.1"
  }
}
